---
import { Icon } from "astro-icon/components";
import "../Styles/global.css";
---

<article id="menu">
    <div class="AskExperts">
      <Icon name="logo" />
      <h2>AskExperts</h2>
    </div>

    <div class="menu">
      <a href="index.html">Home</a>
      <a href="team">Service</a>
      <a href="case">Case</a>
      <a href="study ">Study</a>
    </div>

    <div class="search">
      <Icon name="icon3" />
      <p>+ (888) 452 1505</p>
    </div>
</article>

<style>

  #menu{
    background-color: var(--menu-background-color);

    display: grid;
    flex-direction: column;
    text-align: center;
    color: white;

    & .AskExperts{
      display: flex;
      align-items: center;
      margin: auto;
    }
    & h2{
       font-size: var(--content-h2);
    }

    .menu a{
      color: white;
    }


    .search{
      text-align: center;
      display: flex;
      align-items: center;
      margin: auto
    }
  }

  


@media screen and (min-width: 999px){

 #menu{
  display: flex;
  padding: 30px 150px;
  align-items: center;
  color: var(--content-color-white);
  height: 50px;
  flex-direction: row;
  gap: 5em;
  
  backdrop-filter: var(--menu-backdrop-filter);
 & h2{
   font-size: var(--content-h2);
 }
 & .menu{
   display: flex;
   gap: var(--icon-gap3);
 }

 & .menu a{
  text-decoration: none;
  color: white;
 }
 & .search, .AskExperts{
   display: flex;
   gap: var(--icon-gap2);
   align-items: center;
 }

 & .search{
  background-color: var(--background-color2);
  border-radius: var(--search-border-radius);
  padding: 1px 20px;
  color: var(--content-color-black);

 }

 

}

  
}
</style>